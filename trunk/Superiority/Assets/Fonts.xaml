<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation" 
    xmlns:my="clr-namespace:System;assembly=mscorlib" >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="HeaderFontFamily">/Superiority;component/Assets/Fonts/ZegoeLight-U.ttf#Zegoe Light - U</FontFamily>
    <FontFamily x:Key="ContentFontFamily">/Superiority;component/Assets/Fonts/ZegoeUI-U.ttf#Zegoe UI - U</FontFamily>

    <my:Double x:Key="ApplicationNameFontSize">20</my:Double>
    <my:Double x:Key="HeaderFontSize">20</my:Double>
    <my:Double x:Key="NavigationFontSize">20</my:Double>
    
    <my:Double x:Key="ContentFontSize">14</my:Double>
    <my:Double x:Key="HyperlinkFontSize">14</my:Double>
    <my:Double x:Key="LabelFontSize">12</my:Double>
    <my:Double x:Key="ControlTitleFontSize">16</my:Double>
    <my:Double x:Key="ControlTitleBigFontSize">18</my:Double>
    <my:Double x:Key="ControlContentFontSize">10</my:Double>

    
</ResourceDictionary>
