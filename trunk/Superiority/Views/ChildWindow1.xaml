<sdk:ChildWindow x:Class="Superiority.Views.ChildWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"	
    Title="About Superiority.NET"
    Width="400" Height="300"
    Style="{StaticResource ChildWindowStyle}">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" MinHeight="45" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="Close" Click="CancelButton_Click" Width="75" Height="30" HorizontalAlignment="Right" Grid.Row="1" />
        <ScrollViewer>
            <TextBlock Margin="8" TextWrapping="Wrap"><Span><Run Text="Currently, this project was started and created by Warrior.x86. He recently stopped working on it. Its open source but he wanted Tagban of BNET.cc to take it over. I plan to keep working on it very hard, but it is a learning experience. Expect delays and lots of bugs! That being said, please let me know if you find an issue via the Google Code website below, or via BNET.cc"/></Span></TextBlock>
        </ScrollViewer>
        <HyperlinkButton Content="Google Code" Grid.Row="1" Height="19" HorizontalAlignment="Left" Margin="25,13,0,0" Name="hyperlinkButton1" VerticalAlignment="Top" Width="87" Click="hyperlinkButton1_Click" />
    </Grid>
</sdk:ChildWindow>