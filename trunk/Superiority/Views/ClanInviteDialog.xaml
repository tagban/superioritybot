<controls:ChildWindow x:Class="Superiority.Views.ClanInviteDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="310" Height="160"
           Style="{StaticResource ChildWindowStyle}"
           Title="you are invited">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    
        <TextBlock FontSize="15" TextWrapping="Wrap">
            <Run FontWeight="Bold" Text="Vector" />
            <Run Text="is inviting you to join Clan Code Speak." />
            <LineBreak />
            <Run Text="Do you accept?" />
        </TextBlock>    
        <Button x:Name="CancelButton" Content="No" Click="CancelButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="Yes" Click="OKButton_Click" Width="75" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>